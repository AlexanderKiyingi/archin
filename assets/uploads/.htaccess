# Prevent PHP execution in uploads directory
# This is a security measure to prevent uploaded files from being executed as PHP

# Disable PHP engine
php_flag engine off

# Or use FilesMatch to deny PHP files
<FilesMatch "\.ph(p[3457]?|t|tml)$">
    Require all denied
</FilesMatch>

# Prevent directory browsing
Options -Indexes

# Allow only specific file types
<FilesMatch "\.(jpg|jpeg|png|gif|webp|pdf|doc|docx)$">
    Require all granted
</FilesMatch>
